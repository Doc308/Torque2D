              MinExtent="8 2"
              canSave="1"
              Visible="1"
              Command="Canvas.pushDialog(joinServerGui);"
              hovertime="1000"
              Text="Join a Server"
              groupNum="-1"
              buttonType="PushButton"/>
// --------------- Disconnect -------------------              
         <GuiButtonCtrl
              Name="Disconnect"
              canSaveDynamicFields="0"
              Profile="RedButtonProfile"
              HorizSizing="relative"
              VertSizing="relative"
              Position="43 110"
              Extent="137 30"
              MinExtent="8 2"
              canSave="1"
              Visible="1"
              Command="disconnect();"
              hovertime="1000"
              Text="Disconnect"
              groupNum="-1"
              buttonType="PushButton"/>
