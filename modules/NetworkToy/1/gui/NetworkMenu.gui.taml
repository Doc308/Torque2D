    VertSizing="bottom"
    Position="0 0"
    Extent="640 480"
    MinExtent="8 2"
    canSave="1"
    Visible="1"
    hovertime="1000">
    
    <GuiWindowCtrl
         canSaveDynamicFields="0"
         Profile="GuiWindowProfile"
         HorizSizing="right"
         VertSizing="bottom"
         Position="220 153"
         Extent="218 153"
         MinExtent="8 2"
         Visible="1"
         hovertime="1000"
         Text="Network Menu"
         maxLength="1024"
         resizeWidth="0"
         resizeHeight="0"
         canMove="1"
         canClose="1"
